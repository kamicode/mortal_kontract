<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_MORTAL_KONTRACTS_FORM_LBL_PROVIDER_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_MORTAL_KONTRACTS_FORM_LBL_PROVIDER_CREATED_BY"
            description="COM_MORTAL_KONTRACTS_FORM_DESC_PROVIDER_CREATED_BY"  /> 

       <field name="name" type="text"
                
            label="COM_MORTAL_KONTRACTS_FORM_LBL_PROVIDER_NAME"
            description="COM_MORTAL_KONTRACTS_FORM_DESC_PROVIDER_NAME" 
                
                
                 required="true"  /> 

       <field name="connector" type="list"
                
            label="COM_MORTAL_KONTRACTS_FORM_LBL_PROVIDER_CONNECTOR"
            description="COM_MORTAL_KONTRACTS_FORM_DESC_PROVIDER_CONNECTOR" 
                
                
                 required="true" >
                <option value="raw">raw</option>
                <option value="rss">rss</option>
                <option value="custom">custom</option>
        </field> 

 
		<field name="filter_connector" type="list" onchange="this.form.submit();">
			<option value="">COM_MORTAL_KONTRACTS_PROVIDERS_CONNECTOR_FILTER</option>
			<option value="raw">raw</option>
			<option value="rss">rss</option>
			<option value="custom">custom</option>
		</field> 

       <field name="parser" type="list"
                
            label="COM_MORTAL_KONTRACTS_FORM_LBL_PROVIDER_PARSER"
            description="COM_MORTAL_KONTRACTS_FORM_DESC_PROVIDER_PARSER" 
                
                
                
            multiple="false">
                <option value="raw">raw</option>
                <option value="craigslist">craigslist</option>
                <option value="kijiji">kijiji</option>
                <option value="smart">smart</option>
        </field> 

 
		<field name="filter_parser" type="list" onchange="this.form.submit();">
			<option value="">COM_MORTAL_KONTRACTS_PROVIDERS_PARSER_FILTER</option>
			<option value="raw">raw</option>
			<option value="craigslist">craigslist</option>
			<option value="kijiji">kijiji</option>
			<option value="smart">smart</option>
		</field> 

       <field name="average_rating" type="text"
                
            label="COM_MORTAL_KONTRACTS_FORM_LBL_PROVIDER_AVERAGE_RATING"
            description="COM_MORTAL_KONTRACTS_FORM_DESC_PROVIDER_AVERAGE_RATING" 
                
                
                
            filter="float"
            size="2"
            maxlength="2" /> 

       <field name="url" type="text"
                
            label="COM_MORTAL_KONTRACTS_FORM_LBL_PROVIDER_URL"
            description="COM_MORTAL_KONTRACTS_FORM_DESC_PROVIDER_URL" 
                
                
                 required="true" 
            filter="url"
            size="100" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
